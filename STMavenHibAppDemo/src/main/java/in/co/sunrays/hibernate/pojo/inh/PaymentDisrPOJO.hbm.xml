<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="in.co.sunrays.hibernate.pojo.inh">
	<class name="PaymentDisrPOJO" table="PaymentDisr">
		<id name="paymentid" type="java.lang.Long" column="PaymentId" length="20" >
			<generator class="increment"></generator>
		</id>
		<discriminator column="paymentType"></discriminator>
		<property name="amount" type="java.lang.Integer" column="Amount" length="20"></property>

		<subclass name="CreditCardDisrPOJO" discriminator-value="cradit">
			<join table="CreditPaymentDisr">
				<key column="paymentid"></key>
				<property name="cctype" type="java.lang.Integer" column="CCType" length="20" ></property>
			</join>
		</subclass>

		<subclass name="ChaqueDisrPOJO" discriminator-value="cheque">
			<join table="ChequePaymentDisr">
				<key column="paymentid"></key>
				<property name="amount" type="java.lang.Integer" column="Amount" length="20"></property>
				<property name="bankname" type="java.lang.String" column="BankName"
			length="50" ></property>
				<property name="chaquenumber" type="java.lang.Integer" column="ChaqueNumber" length="50" ></property>
			</join>
		</subclass>

		<subclass name="CashDisrPOJO" discriminator-value="cash">
			<join table="CashPaymentDisr">
				<key column="paymentid"></key>

			</join>
		</subclass>
	</class>
</hibernate-mapping>
