<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="in.co.sunrays.hibernate.pojo">

	<class name="AddressPOJO" table="Address">
		<id name="id" type="java.lang.Long" column="ID" length="20">
			<generator class="increment"></generator>
		</id>
		<property name="street" type="java.lang.String" column="STREET"
			length="20" />
		<property name="city" type="java.lang.String" column="CITY"
			length="20" />
		<property name="state" type="java.lang.String" column="STATE"
			length="20" />
		<property name="zip" type="java.lang.String" column="ZIP"
			length="10" />
		<property name="email" type="java.lang.String" column="EMAIL"
			length="20" />
	</class>

</hibernate-mapping>
