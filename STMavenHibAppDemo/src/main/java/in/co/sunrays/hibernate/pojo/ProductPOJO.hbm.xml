<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="in.co.sunrays.hibernate.pojo">

	<!-- @version 1.0 -->
	<!-- @since 16 Nov 2014 -->
	<!-- @author SUNRAYS Developer -->
	<!-- @Copyright (c) sunRays Technologies. All rights reserved. -->
	<!-- @URL www.sunrays.co.in -->

	<class name="ProductPOJO" table="ST_PRODUCT" dynamic-insert="true"
		dynamic-update="true">
		<id name="id" type="java.lang.Long" column="ID" length="20">
			<generator class="increment"></generator>
		</id>
		<property name="productName" type="java.lang.String" column="PRODUCT_NAME"
			length="100">
		</property>
		<property name="price" type="java.lang.Integer" column="PRICE"
			length="100">
		</property>
	</class>

	<query name="allProduct">
	<![CDATA[from ProductPOJO ]]>
	</query>

</hibernate-mapping>