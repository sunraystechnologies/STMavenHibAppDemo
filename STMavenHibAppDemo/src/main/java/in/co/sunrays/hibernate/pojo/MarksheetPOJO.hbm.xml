	<class name="MarksheetPOJO" table="ST_MARKSHEET" dynamic-insert="true"
		dynamic-update="true">
<!-- 	<cache usage="read-only" /> -->
			<id name="id" type="java.lang.Long" column="ID" length="20">
				<generator class="increment"></generator>
			</id>
			<property name="rollNo" type="java.lang.String" column="ROLL_NO"
				length="100">
			</property>
			<property name="name" type="java.lang.String" column="NAME"
				length="100">
			</property>
			<property name="physics" type="java.lang.Integer" column="PHYSICS"
				length="20">
			</property>
			<property name="chemistry" type="java.lang.Integer" column="CHEMISTRY"
				length="20">
			</property>
			<property name="maths" type="java.lang.Integer" column="MATHS"
				length="50">
			</property>
	</class>
</hibernate-mapping>