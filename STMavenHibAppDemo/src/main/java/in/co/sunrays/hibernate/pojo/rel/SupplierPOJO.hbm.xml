	<class name="SupplierPOJO" table="ST_SUPPLIER" dynamic-insert="true"
		dynamic-update="true">
		<id name="supplierId" type="java.lang.Long" column="supplierId"
			length="20">
			<generator class="increment"></generator>
		</id>
		<property name="name" type="java.lang.String" column="NAME"
			length="20">
		</property>
		<property name="adrress" type="java.lang.String" column="ADDRESS"
			length="50">
		</property>
		<property name="phoneNo" type="java.lang.String" column="PHONE_NO"
			length="20">
		</property>

	</class>
</hibernate-mapping>