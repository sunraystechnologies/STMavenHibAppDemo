<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="in.co.sunrays.hibernate.pojo.rel">
	<class name="SupplierPOJO" table="supplier" dynamic-insert="true"
		dynamic-update="true">
		<id name="supplierId" type="java.lang.Long" column="supplierId" length="20">
			<generator class="increment"></generator>
		</id>
		<property name="name" type="java.lang.String" column="NAME"
			length="20">
		</property>
		<property name="adrress" type="java.lang.String" column="ADDRESS"
			length="50">
		</property>
		<property name="phoneNo" type="java.lang.String" column="PHONE_NO"
			length="20">
		</property>
	
	</class>
</hibernate-mapping>