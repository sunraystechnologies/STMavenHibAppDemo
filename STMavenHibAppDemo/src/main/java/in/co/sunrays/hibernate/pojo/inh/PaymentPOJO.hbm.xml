<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="in.co.sunrays.hibernate.pojo.inh">
	<class name="PaymentPOJO" table="Payment">
		<id name="paymentid" type="java.lang.Long" column="PaymentId" length="20" >
			<generator class="increment"></generator>
		</id>
		<property name="amount" type="java.lang.Integer" column="Amount" length="20" ></property>

		<joined-subclass name="CashPOJO" table="cash">
			<key column="paymentid" />
		</joined-subclass>

		<joined-subclass name="ChaquePOJO" table="chaque">
			<key column="paymentid" />
			<property name="chaquenumber" type="java.lang.Integer" column="ChaqueNumber" length="20" ></property>
			<property name="bankname" type="java.lang.String" column="BankName"
			length="50" ></property>
		</joined-subclass>

		<joined-subclass name="CreditCardPOJO" table="creditcard">
			<key column="paymentid" />
			<property name="cctype" type="java.lang.Integer" column="CCType" length="20" ></property>
		</joined-subclass>
	</class>
</hibernate-mapping>
