<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="in.co.sunrays.hibernate.pojo">

	<class name="AuctionItemPOJO" table="AuctionItem">
		<id name="id" type="java.lang.Long" column="ID" length="20">
			<generator class="increment"></generator>
		</id>
		<property name="description" type="java.lang.String" column="DESCRIPTION"
			length="50" />

		<set name="bids" cascade="all" lazy="true">
			<key column="ITEM_ID" />
			<one-to-many class="BidPOJO" />
		</set>

	</class>

</hibernate-mapping>
